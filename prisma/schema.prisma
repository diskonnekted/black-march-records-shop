generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  artist      String
  format      Format   // vinyl, cd, cassette, shirt, patch, accessory
  genre       String   // Black Metal, Death Metal, etc.
  subgenre    String?  // Raw Black Metal, Symphonic Black Metal, etc.
  price       Float
  image       String?
  description String?
  inStock     Boolean  @default(true)
  year        Int?
  label       String?
  limited     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  type        CategoryType // RECORD_FORMAT, MUSIC_GENRE
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id        String   @id @default(cuid())
  total     Float
  status    OrderStatus @default(PENDING)
  email     String?
  name      String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orderItems OrderItem[]
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String
  quantity  Int    @default(1)
  price     Float
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
}

enum Format {
  VINYL
  CD
  CASSETTE
  SHIRT
  PATCH
  ACCESSORY
}

enum CategoryType {
  RECORD_FORMAT
  MUSIC_GENRE
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}